def calculator():
    """
    A simple command-line calculator that takes two numbers and an operator.
    """
    print("Simple Calculator")
    print("------------------")

    # Get the first number from the user.
    # The while loop ensures valid numeric input.
    while True:
        try:
            num1 = float(input("Enter the first number: "))
            break
        except ValueError:
            print("Invalid input. Please enter a valid number.")

    # Get the second number from the user.
    # The while loop ensures valid numeric input.
    while True:
        try:
            num2 = float(input("Enter the second number: "))
            break
        except ValueError:
            print("Invalid input. Please enter a valid number.")

    # Get the mathematical operator from the user.
    # The while loop ensures a valid operator is entered.
    while True:
        operator = input("Enter the operation (+, -, *, /): ")
        if operator in ['+', '-', '*', '/']:
            break
        else:
            print("Invalid operator. Please enter one of +, -, *, /")

    # Perform the calculation based on the operator.
    if operator == '+':
        result = num1 + num2
    elif operator == '-':
        result = num1 - num2
    elif operator == '*':
        result = num1 * num2
    elif operator == '/':
        # Handle division by zero.
        if num2 == 0:
            print("Error: Division by zero is not allowed.")
            return
        result = num1 / num2

    # Print the result in the requested format.
    print(f"{num1} {operator} {num2} = {result}")

if __name__ == "__main__":
    calculator()

